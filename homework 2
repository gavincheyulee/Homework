5(1)
# include <iostream>
using namespace std;

float transition (float x)
{
       float y;
       y=5*(x-32)/9;
       return y;
}
void main()
{
   float c;
   float f;
   cout<<"输入华氏温度f="<<endl;
   cin>>f;
   c=transition (f);
   cout<<"对应的摄氏温度c="<<c<<endl;
}


5(5)
# include <iostream>
using namespace std;
int fac(int x)
{
int t;
 if (x==1)
   t=1;
 else
   t=x*fac(x-1);
return t;
}
int main()
{
   int n;
   int m;
   int Cmn;
   cout<<"输入m,n "<<endl;
   cin>>m>>n;
   Cmn=fac(m) /(fac(n)*fac(m-n));
   cout<<"Cmn="<<Cmn<<endl;
   return 0;
}

5(7)
# include <iostream>
using namespace std;
float fun(float x, float y)
{
float z;
 if (y==1)
   z=x;
 else
   z=x*fun(x,y-1);
  return z;
}
void main()
{
   float x;
   float y;
   float z;

   cout<<"输入x,y "<<endl;
   cin>>x>>y;
   z=fun(x,y);
   cout<<z<<endl;
}
